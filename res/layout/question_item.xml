<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner"
    android:orientation="vertical"
    android:padding="1dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >
        
        <TextView
            android:id="@+id/user_text"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_weight=".25" />

    </LinearLayout>
    
    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/listitemdivider_bg" />
    
    <TextView
        android:id="@+id/question_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textSize="28sp" />

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/listitemdivider_bg" />
    
    <Button
        android:id="@+id/ans_btn1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/dialog_button"
        android:gravity="left|center_vertical" />

    <View
        android:id="@+id/ans_border1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/listitemdivider_bg" />
    
    <Button
        android:id="@+id/ans_btn2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/dialog_button"
        android:gravity="left|center_vertical" />

    <View
        android:id="@+id/ans_border2"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/listitemdivider_bg" />
    
    <Button
        android:id="@+id/ans_btn3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/dialog_button"
        android:gravity="left|center_vertical" />

    <View
        android:id="@+id/ans_border3"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/listitemdivider_bg" />
    
    <Button
        android:id="@+id/ans_btn4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/dialog_button"
        android:gravity="left|center_vertical" />

    <View
        android:id="@+id/ans_border4"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/listitemdivider_bg" />
    
    <Button
        android:id="@+id/ans_btn5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/dialog_button"
        android:gravity="left|center_vertical" />

    <View
        android:id="@+id/ans_border5"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/listitemdivider_bg" />
    
</LinearLayout>
