<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/listview_bg" >

    <View
        android:id="@+id/more_view1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/listitemdivider_bg" />
    
    <Button
        android:id="@+id/my_q_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/flat_button"
        android:gravity="left|center_vertical"
        android:paddingLeft="25dp"
        android:text="My Questions" />
    
    <View
        android:id="@+id/more_view2"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/listitemdivider_bg" />

    <Button
        android:id="@+id/my_ans_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/flat_button"
        android:gravity="left|center_vertical"
        android:paddingLeft="25dp"
        android:text="My Answers" />
    
    <View
        android:id="@+id/more_view3"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/listitemdivider_bg" />

    <Button
        android:id="@+id/settings_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/flat_button"
        android:gravity="left|center_vertical"
        android:paddingLeft="25dp"
        android:text="Settings" />
    
    <View
        android:id="@+id/more_view4"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/listitemdivider_bg" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/flat_button"
        android:gravity="left|center_vertical"
        android:paddingLeft="25dp"
        android:text="Logout" />
    
    <View
        android:id="@+id/more_view5"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/listitemdivider_bg" />

</LinearLayout>
