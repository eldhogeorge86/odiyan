<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/view_votes_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_button"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:text="View Votes" />
    
    <View
        android:id="@+id/q_more_view1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/listitemdivider_bg" />
    
    <Button
        android:id="@+id/follow_user_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_button"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:text="Follow" />

    <View
        android:id="@+id/q_more_view2"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/listitemdivider_bg" />
    
    <Button
        android:id="@+id/share_q_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_button"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:text="Share Question" />

    <View
        android:id="@+id/q_more_view3"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/listitemdivider_bg" />
    
    <Button
        android:id="@+id/report_q_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_button"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:text="Report Question" />

    <View
        android:id="@+id/q_more_view4"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/listitemdivider_bg" />

</LinearLayout>
